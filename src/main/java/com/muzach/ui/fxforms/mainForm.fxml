<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Spinner?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Slider?>
<AnchorPane prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.muzach.ui.controllers.MainForm">
    <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <children>
            <TabPane prefHeight="350" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Presets">
                        <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0">
                                <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <VBox fx:id="defaultPresetsVBox" spacing="10">
                                        <padding><Insets left="10" top="10"></Insets></padding>
                                    </VBox>
                                </ScrollPane>
                            </AnchorPane>
                        </content>
                    </Tab>
                    <Tab text="My Presets">
                        <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0">
                                <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <VBox fx:id="myPresetsVBox" spacing="10">
                                        <padding><Insets left="10" top="10"></Insets></padding>
                                    </VBox>
                                </ScrollPane>
                            </AnchorPane>
                        </content>
                    </Tab>
                    <Tab text="Advanced Settings">
                        <content>
                            <AnchorPane minHeight="0.0" minWidth="0.0">
                                <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <GridPane hgap="5" vgap="15">
                                        <padding><Insets left="20" top="20" bottom="20" right="20"/></padding>
                                        <children>
                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                <font><Font size="18" /></font>
                                                Melody
                                            </Label>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Scale / Mode:"/>
                                            <ComboBox prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="scaleComboBox"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Pitch Jumps:"/>
                                            <Slider min="1" max="100" value="50" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="pitchJumpsSlider"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="3">
                                                <font><Font size="18" /></font>
                                                <padding><Insets top="5"/></padding>
                                                Rhythm
                                            </Label>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="4" text="Time Signature:"/>
                                            <ComboBox prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="timeSignatureComboBox"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="5" text="Note Values:"/>
                                            <Slider min="1" max="100" value="50" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="noteValuesSlider"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="6" text="Pause Frequency:"/>
                                            <Slider min="1" max="100" value="50" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="pauseFrequencySlider"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="7">
                                                <font><Font size="18" /></font>
                                                <padding><Insets top="5"/></padding>
                                                Harmony
                                            </Label>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="8" text="Change Frequency:"/>
                                            <Slider min="1" max="100" value="50" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="8" fx:id="chordChangeFrequencySlider"/>

                                            <Label GridPane.columnIndex="0" GridPane.rowIndex="9" text="Chords Color:"/>
                                            <Slider min="1" max="100" value="50" maxWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="9" fx:id="chordColorSlider"/>

                                            <Button GridPane.columnIndex="0" GridPane.rowIndex="10" fx:id="savePresetButton" onAction="#savePreset" text="Save Preset">
                                                <VBox.margin>
                                                    <Insets top="10.0"/>
                                                </VBox.margin>
                                            </Button>
                                        </children>
                                        <columnConstraints>
                                            <ColumnConstraints prefWidth="125"></ColumnConstraints>
                                            <ColumnConstraints prefWidth="200"></ColumnConstraints>
                                        </columnConstraints>
                                    </GridPane>
                                </ScrollPane>
                            </AnchorPane>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding><Insets top="10" bottom="10"/></padding>
                <Button fx:id="saveMidiButton" onAction="#saveMidi">Save MIDI</Button>
                <Label>Measure count:</Label>
                <Spinner fx:id="measureCountSpinner" prefWidth="75" min="1" max="16" initialValue="4"/>
                <Button fx:id="generateButton" onAction="#generate">Generate</Button>
            </HBox>
            <HBox fx:id="playerHBox">
            </HBox>
            <HBox alignment="CENTER" spacing="5">
                <padding><Insets top="10"></Insets></padding>
                <children>
                    <CheckBox fx:id="repeatCheckBox">Repeat</CheckBox>
                    <Button fx:id="playButton" onAction="#play">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../resources/play.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="pauseButton" onAction="#pause">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../resources/pause.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="stopButton" onAction="#stop">
                        <graphic>
                            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../resources/stop.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Label>Tempo:</Label>
                    <Spinner fx:id="tempoSpinner" prefWidth="75" min="20" max="400" initialValue="80"/>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>

</AnchorPane>
